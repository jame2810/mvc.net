@model project1.Models.Employee

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    Edit Post
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Update", "Employee", FormMethod.Post))
                    {@Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.EmployeeId)
                    <div class="form-group">
                        <label>Name</label>
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Salary</label>
                        @Html.TextBoxFor(m => m.Salary, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Gender</label>
                        @Html.DropDownListFor(m => m.Gender, (SelectList)ViewBag.Gender, "--Select gender--", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Working Time</label>
                        @{ 
                            var Type = Model.WorkingTime.Type;
                        } 
                        @Html.DropDownListFor(m => Type, (SelectList)ViewBag.WorkingTime, "--Select working time--", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" value="Update" class="btn btn-success" />
                        @if (ViewBag.message != "")
                        {
                            <span class="badge badge-danger">@ViewBag.message</span>
                        }
                    </div>
                }
                </div>
            </div>
        </div>
    </div>
</div>
